{
  "manifest_version": 3,
  "name": "SnapLogic Pipeline Explorer",
  "version": "1.2",
  "description": "Sidebar showing open SnapLogic pipelines with grouping, search, and collapsible sections",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://*.snaplogic.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.snaplogic.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SnapLogic Pipeline Explorer",
    "default_icon": {
      "16": "icons/favicon16.png",
      "32": "icons/favicon32.png",
      "48": "icons/favicon48.png",
      "128": "icons/favicon128.png"
    }
  },
  "icons": {
    "16": "icons/favicon16.png",
    "32": "icons/favicon32.png",
    "48": "icons/favicon48.png",
    "128": "icons/favicon128.png"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["https://*.snaplogic.com/*"]
    }
  ]
}
